# ==========================================
# QuantumCoin API - Environment Configuration
# ==========================================
# Copy this file to .env and fill in your values

# ==================== SERVER ====================
# Server port
PORT=5000

# Node environment (development, production, staging)
NODE_ENV=development

# API Base URL (for CORS and frontend communication)
API_URL=https://quantum-coin-backend.onrender.com

# Frontend URL (for CORS)
FRONTEND_URL=https://quantumcoin.com.ng

# ==================== DATABASE ====================
# Database configuration
# Using in-memory SQLite by default (:memory:)
# Uncomment below to use a file-based database
# DB_PATH=./quantum-coin.db

# ==================== JWT SECURITY ====================
# JWT Secret Keys
# IMPORTANT: Generate secure random strings for production
# You can generate them using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 
# Leave commented to auto-generate on startup (development only)
# For production, ALWAYS set these to secure random values

# User JWT Secret (used for user authentication tokens)
# JWT_SECRET=67bb09664dc90cec53eb8fec30ecc696e6c504414f5c8b172f0a814b1203d22d
# Admin JWT Secret (used for admin authentication tokens)
# ADMIN_JWT_SECRET=8fb13dbd86f827b7584e4a4fe47a94b0674e2a22442d06f3a73cdebd27f65d05

# JWT Token Expiration Times
JWT_EXPIRES_IN=30000000000000000d
ADMIN_JWT_EXPIRES_IN=30000000000000000d

# ==================== SECURITY ====================
# CORS Settings
CORS_ORIGIN=https://quantumcoin.com.ng
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================== LOGGING ====================
# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Log format (combined, common, dev, short, tiny)
MORGAN_FORMAT=combined

# ==================== EMAIL (OPTIONAL) ====================
# Email configuration for sending notifications
# Uncomment and configure if you want to add email functionality

# EMAIL_SERVICE=gmail
# EMAIL_FROM=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# SMTP Configuration (alternative to SERVICE)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-password
# SMTP_FROM=noreply@quantumcoin.com

# ==================== PAYMENT GATEWAY (OPTIONAL) ====================
# Stripe Configuration (if implementing real payments)
# STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxx
# STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# PayPal Configuration (if implementing PayPal)
# PAYPAL_CLIENT_ID=xxxxxxxxxxxxx
# PAYPAL_CLIENT_SECRET=xxxxxxxxxxxxx
# PAYPAL_MODE=sandbox

# ==================== CRYPTOCURRENCY (OPTIONAL) ====================
# Crypto API Keys for price updates
# CoinGecko API (free, no key needed)
# COINGECKO_API_URL=https://api.coingecko.com/api/v3

# CoinMarketCap API (paid, requires key)
# COINMARKETCAP_API_KEY=your-api-key
# COINMARKETCAP_API_URL=https://pro-api.coinmarketcap.com/v1

# ==================== BLOCKCHAIN NETWORKS (OPTIONAL) ====================
# Blockchain RPC Endpoints for transaction verification

# Bitcoin
# BTC_RPC_URL=https://blockstream.info/api
# BTC_NETWORK=mainnet

# Ethereum
# ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
# ETH_NETWORK=mainnet
# ETH_CHAIN_ID=1

# USDT (Tron Network - TRC20)
# TRON_RPC_URL=https://api.trongrid.io
# TRON_NETWORK=mainnet

# ==================== ADMIN SETTINGS ====================
# Default admin credentials (created on first startup)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_EMAIL=admin@quantumcoin.com

# Default demo user credentials
DEFAULT_USER_USERNAME=testuser
DEFAULT_USER_PASSWORD=password123
DEFAULT_USER_EMAIL=test@quantumcoin.com

# ==================== TRANSACTION SETTINGS ====================
# Deposit Settings
MIN_DEPOSIT_AMOUNT=10
MAX_DEPOSIT_AMOUNT=100000
DEPOSIT_BONUS_THRESHOLD=1000
DEPOSIT_BONUS_PERCENTAGE=5

# Withdrawal Settings
MIN_WITHDRAWAL_AMOUNT=10
MAX_WITHDRAWAL_AMOUNT=50000
WITHDRAWAL_PROCESSING_FEE_PERCENT=1

# Network Fees (in USD)
BTC_NETWORK_FEE=3
ETH_NETWORK_FEE=8
USDT_NETWORK_FEE=1

# ==================== TRADING SETTINGS ====================
# Demo Account Default Balance
DEMO_ACCOUNT_INITIAL_BALANCE=5000

# Funding Account Initial Balance
FUNDING_ACCOUNT_INITIAL_BALANCE=0

# Trading Fees
TRADING_FEE_PERCENT=0.1

# ==================== NOTIFICATIONS ====================
# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# ==================== CACHING ====================
# Redis Configuration (optional, for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ==================== MONITORING (OPTIONAL) ====================
# Sentry Error Tracking
# SENTRY_DSN=your-sentry-dsn-here

# New Relic Monitoring
# NEW_RELIC_LICENSE_KEY=your-license-key

# ==================== SOCIAL (OPTIONAL) ====================
# Google OAuth
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-client-secret
# GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# GitHub OAuth
# GITHUB_CLIENT_ID=your-client-id
# GITHUB_CLIENT_SECRET=your-client-secret
# GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# ==================== FILE UPLOAD ====================
# AWS S3 Configuration (for document/proof uploads)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=quantumcoin-uploads

# ==================== WORKER JOBS (OPTIONAL) ====================
# Bull Queue Configuration (for background jobs)
# JOB_QUEUE_REDIS_URL=redis://localhost:6379

# Cron Job Settings
UPDATE_PRICES_INTERVAL=30000
CLEANUP_EXPIRED_TOKENS_INTERVAL=3600000

# ==================== DEBUG ====================
# Debug mode (enables detailed logging and error messages)
DEBUG=false

# Verbose API logging
VERBOSE_LOGGING=false

# ==================== NOTES ====================
# 1. Never commit .env file to version control
# 2. Always use strong, randomly generated secrets in production
# 3. To generate a secure secret:
#    node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 4. Keep different .env files for different environments:
#    - .env.development
#    - .env.staging
#    - .env.production
# 5. Use environment-specific configs in CI/CD pipelines
