{
  "name": "quantumcoin-backend",
  "version": "1.0.0",
  "description": "QuantumCoin - Complete Crypto Trading Platform with Admin Panel",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "seed": "node seed.js",
    "build": "echo 'No build step required for Node.js backend'",
    "lint": "eslint .",
    "format": "prettier --write '**/*.{js,json,md}'"
  },
  "keywords": [
    "crypto",
    "trading",
    "quantumcoin",
    "blockchain",
    "admin-panel",
    "real-time",
    "websocket"
  ],
  "author": "QuantumCoin Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dev-shadow2563/quantumcoin-backend.git"
  },
  "bugs": {
    "url": "https://github.com/Dev-shadow2563/quantumcoin-backend/issues"
  },
  "homepage": "https://quantumcoin.com.ng",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "google-auth-library": "^8.8.0",
    "axios": "^1.4.0",
    "dotenv": "^16.0.3",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.10.0",
    "jsonwebtoken": "^9.0.0",
    "validator": "^13.9.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.41.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "^2.8.8",
    "cross-env": "^7.0.3",
    "concurrently": "^8.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "no-console": "off",
      "consistent-return": "off",
      "camelcase": "off",
      "no-underscore-dangle": "off"
    }
  }
}
